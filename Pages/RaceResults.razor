@page "/race/{SessionKey:int}"
<PageTitle>Race Results</PageTitle>

<div class="max-w-7xl mx-auto">
    @if (isLoading)
    {
        <div class="text-center py-20">
            <p class="text-xl text-white">Loading race data...</p>
        </div>
    }
    else if (errorMessage != null)
    {
        <div class="bg-red-900 border border-red-700 rounded p-4 mb-6">
            <p class="text-white">@errorMessage</p>
        </div>
    }
    else
    {
        <nav class="flex items-center gap-2 text-sm mb-6">
            <a href="./" class="text-gray-400 hover:text-white transition">Home</a>
            <span class="text-gray-600">/</span>
            <span class="text-white">@raceTitle</span>
        </nav>

        <div class="bg-f1-gray rounded-lg p-6 mb-6">
            <div class="flex items-start gap-6">
                @if (!string.IsNullOrEmpty(trackImageUrl))
                {
                    <div class="hidden lg:block lg:w-96">
                        <img src="@trackImageUrl" alt="Track map" class="w-full rounded-lg" />
                    </div>
                }
                <div class="flex-1">
                    <h1 class="text-4xl font-bold mb-2 text-white">@raceTitle</h1>
                    <p class="text-xl text-gray-400">@raceDate</p>
                </div>
            </div>
        </div>

        <div class="bg-f1-gray rounded-lg p-6 mb-6">
            <h2 class="text-2xl font-bold mb-4 text-white">Race Results</h2>
            <div class="overflow-x-auto">
                <table class="w-full text-left text-white">
                    <thead class="bg-f1-dark">
                        <tr>
                            <th class="p-3">Pos</th>
                            <th class="p-3">Driver</th>
                            <th class="p-3">Team</th>
                            <th class="p-3">Pit Stops</th>
                            <th class="p-3">Best Lap</th>
                            <th class="p-3 text-right">Points</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var standing in driverStandings.Take(20))
                        {
                            var bgClass = standing.Position switch
                            {
                                1 => "bg-yellow-900 bg-opacity-30",
                                2 => "bg-gray-600 bg-opacity-30",
                                3 => "bg-orange-900 bg-opacity-30",
                                _ => standing.Position % 2 == 0 ? "bg-f1-dark" : ""
                            };
                            
                            <tr class="@bgClass border-b border-gray-700 hover:bg-gray-700 transition">
                                <td class="p-3">
                                    <div class="flex items-center gap-2">
                                        <span class="font-bold">@standing.Position</span>
                                        @if (standing.PositionDelta != 0)
                                        {
                                            var deltaClass = standing.PositionDelta > 0 ? "text-green-500" : "text-red-500";
                                            var arrow = standing.PositionDelta > 0 ? "↑" : "↓";
                                            <span class="text-sm @deltaClass">@arrow@Math.Abs(standing.PositionDelta)</span>
                                        }
                                    </div>
                                </td>
                                <td class="p-3">
                                    <div class="flex items-center gap-3">
                                        @if (!string.IsNullOrEmpty(standing.HeadshotUrl))
                                        {
                                            <img src="@standing.HeadshotUrl" alt="@standing.DriverName" class="w-10 h-10 rounded-full"/>
                                        }
                                        <div>
                                            <div class="font-bold">@standing.DriverName</div>
                                            <div class="text-sm text-gray-400">#@standing.DriverNumber</div>
                                        </div>
                                    </div>
                                </td>
                                <td class="p-3">
                                    <div class="flex items-center gap-2">
                                        <div class="w-3 h-3 rounded" style="background-color: #@standing.TeamColour;"></div>
                                        <span>@standing.TeamName</span>
                                    </div>
                                </td>
                                <td class="p-3">@standing.PitStops</td>
                                <td class="p-3">
                                    @if (standing.BestLapTime > 0)
                                    {
                                        <span class="@(standing.HasFastestLap ? "text-purple-400 font-bold" : "")">
                                            @FormatLapTime(standing.BestLapTime)
                                            @if (standing.HasFastestLap)
                                            {
                                                <span class="ml-1">⚡</span>
                                            }
                                        </span>
                                    }
                                </td>
                                <td class="p-3 text-right font-bold">@GetRacePoints(standing.Position)</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>

        <div class="grid grid-cols-1 lg:grid-cols-2 gap-6 mb-6">
            <div class="bg-f1-gray rounded-lg p-6">
                <h2 class="text-2xl font-bold mb-4 text-white">Tire Strategy</h2>
                <div class="space-y-3">
                    @foreach (var driver in driverStandings.Take(10))
                    {
                        <div class="bg-f1-dark rounded p-3">
                            <div class="flex items-center gap-2 mb-2">
                                <span class="font-bold text-white">P@driver.Position</span>
                                <span class="text-gray-400">@driver.DriverName</span>
                            </div>
                            <div class="flex gap-1">
                                @foreach (var stint in driver.TireStints)
                                {
                                    var color = stint.Compound switch
                                    {
                                        "SOFT" => "bg-red-500",
                                        "MEDIUM" => "bg-yellow-500",
                                        "HARD" => "bg-gray-300",
                                        "INTERMEDIATE" => "bg-green-500",
                                        "WET" => "bg-blue-500",
                                        _ => "bg-gray-500"
                                    };
                                    
                                    <div class="@color h-6 rounded flex items-center justify-center text-xs font-bold text-black"
                                         style="width: @(stint.Laps * 3)px; min-width: 30px;"
                                         title="@stint.Compound - @stint.Laps laps">
                                        @stint.Compound[0]
                                    </div>
                                }
                            </div>
                        </div>
                    }
                </div>
            </div>

            <div class="bg-f1-gray rounded-lg p-6">
                <h2 class="text-2xl font-bold mb-4 text-white">Fastest Lap Comparison</h2>
                <div class="space-y-2">
                    @foreach (var driver in driverStandings.OrderBy(d => d.BestLapTime).Where(d => d.BestLapTime > 0).Take(10))
                    {
                        var isGlobal = driver.HasFastestLap;
                        var barColor = isGlobal ? "bg-purple-500" : "bg-f1-red";
                        var fastestLap = driverStandings.Where(d => d.BestLapTime > 0).Min(d => d.BestLapTime);
                        var percentage = (driver.BestLapTime / fastestLap) * 100 - 100;
                        var barWidth = 100 - (percentage * 10);

                        <div class="flex items-center gap-2">
                            <span class="text-sm text-gray-400 w-8">P@driver.Position</span>
                            <span class="text-white font-medium w-32 truncate">@driver.DriverName</span>
                            <div class="flex-1 bg-gray-700 rounded h-6 relative">
                                <div class="@barColor h-full rounded transition-all" style="width: @(barWidth)%"></div>
                            </div>
                            <span class="text-white text-sm w-20 text-right">
                                @FormatLapTime(driver.BestLapTime)
                                @if (isGlobal)
                                {
                                    <span class="ml-1">⚡</span>
                                }
                            </span>
                        </div>
                    }
                </div>
            </div>
        </div>

        @if (!string.IsNullOrEmpty(chartDataJson))
        {
            <div class="bg-f1-gray rounded-lg p-6 mb-6">
                <h2 class="text-2xl font-bold mb-4 text-white">Position Changes</h2>
                <div id="positionChart" style="min-height: 400px;"></div>
            </div>

            <div class="bg-f1-gray rounded-lg p-6">
                <h2 class="text-2xl font-bold mb-4 text-white">Lap Times</h2>
                <div id="lapTimesChart" style="min-height: 400px;"></div>
            </div>
        }
    }
</div>